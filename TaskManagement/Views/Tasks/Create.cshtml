@model TaskManagement.Models.Task

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskName" class="control-label"></label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskCreatedDateTime" class="control-label"></label>
                <input asp-for="TaskCreatedDateTime" value="@DateTime.Now.ToString()" class="form-control" />
                <span asp-validation-for="TaskCreatedDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskDescription" class="control-label"></label>
                <input asp-for="TaskDescription" class="form-control" />
                <span asp-validation-for="TaskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskCreatorAccountId" class="control-label"></label>
                <select asp-for="TaskCreatorAccountId" class="form-control" asp-items="ViewBag.Creator"></select>
            </div>
            <div class="form-group">
                <label asp-for="TaskTaskStateId" class="control-label"></label>
                <select asp-for="TaskTaskStateId" class="form-control" asp-items="ViewBag.TaskList"></select>
            </div>
            Hidden values:
            <div class="form-group">
                <input name="ProjectID" value="@ViewBag.ProjectID" />
            </div>
            <div class="form-group">
                <input asp-for="TaskProjectId" value="@ViewBag.ProjectID" />
            </div>
            <div class="form-group">
                <input asp-for="TaskTaskStateLastChangeDateTime" value="@DateTime.Now.ToString()" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
