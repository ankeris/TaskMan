@model TaskManagement.Models.Comment
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete the Comment?</h3>
<div>
    <div class="list-group">
        <div href="#" class="list-group-item list-group-item-action flex-column align-items-start">
            <p class="mb-1">@Model.CommentText</p>
            <small class="text-muted">@Model.CommentAccount.AccountUserFirstName @Model.CommentAccount.AccountUserLastName</small>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="CommentId" />
        <input type="submit" value="Delete" class="btn btn-default" />
    </form>
    <a asp-controller="Comment" asp-action="Back" asp-route-id="@Model.CommentId">Back to List</a>
</div>
