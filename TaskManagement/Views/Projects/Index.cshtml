@model IEnumerable<TaskManagement.Models.Project>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectCreatedDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectDeadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectEndDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectCreatorAccount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectCreatedDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectDeadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectEndDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectCreatorAccount.AccountEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjectId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProjectId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProjectId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
