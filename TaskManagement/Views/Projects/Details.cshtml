@model TaskManagement.Models.Project

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>
<a asp-action="Index">Go back</a>
<section class="content-section split-window">
    <div class="split-window window__left">
        <h4>@Model.ProjectName</h4>
        <ul class="task-box">
            <li>Task 1</li>
            <li>Task 2</li>
            <li>Task 3</li>
            <li>Task 4</li>
            <li>Task 5</li>
        </ul>
    </div>
    <div class="split-window window__right">
        <ul class="information-box">
            <li>Progress:</li>
            <li>----------</li>
            <li>Deadline: @Model.ProjectDeadline</li>
            <li>Comments</li>
        </ul>
    </div>
</section>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProjectId">Edit</a>
</div>
